<h1>勤怠データ編集</h1>
<%= form_with model: @work do |form| %>
    <div class="mb-3">
        <%= form.label :start_time, "出勤時間：" %>
        <%= form.datetime_local_field :start_time, value: @work.start_time.try(:strftime, "%Y-%m-%dT%H:%M"), class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :end_time, "退勤時間：" %>
        <%= form.datetime_local_field :end_time, value: @work.end_time.try(:strftime, "%Y-%m-%dT%H:%M"), class: "form-control" %>
    </div>
    <div>
        <%= form.submit "更新", class: 'btn btn-outline-primary' %>
    </div>
<% end %>