<h1>ユーザー詳細</h1>

<div>
<p>ユーザー名：<%= @user.name %></p>
<p>メールアドレス：<%= @user.email %></p>
</div>
<div>
<% if logged_in? && @user == current_user %>
    <%= link_to "編集", edit_user_path, class: 'btn btn-outline-primary' %>
    <%= link_to "削除", user_path(@user), class: 'btn btn-outline-secondary',  method: :delete, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' } %>
<% end %>
</div>