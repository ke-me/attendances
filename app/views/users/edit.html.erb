<h1>ユーザー情報編集</h1>
<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :name, "ユーザー名：" %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :email, "メールアドレス：" %>
        <%= form.text_field :email %>
    </div>
    <div>
        <%= form.label :password, "パスワード：" %>
        <%= form.text_field :password %>
    </div>
    <div><%= form.submit "更新" %></div>
<% end %>