<!DOCTYPE html>
<html>
  <head>
    <title>AttendancesController</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags "application" %>
  </head>

  <body>

    <nav class="nav">
        <ul>
            <li><%= link_to "TOP", root_path %></li>
            <li><%= link_to "勤怠状況", works_path %></li>
            <% if logged_in? %>
            <li><%= link_to "ログアウト", logout_path, data: { turbo_method: :delete, turbo_confirm: " 本当にログアウトしますか？"} %></li>
            <li><%= link_to "アカウント設定", user_path(current_user) %></li>
            <% else %>
            <li><%= link_to "ログイン", login_path %></li>
            <li><%= link_to "新規登録", signup_path %></li>
            <% end %>
        </ul>
    </nav>

    <% flash.each do |key, message| %>
      <% if message.is_a?(Array) %>
        <% message.each do |msg| %>
          <p class="<%= key %>"><%= msg %></p>
        <% end %>
      <% else %>
          <p class="<%= key %>"><%= message %></p>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
